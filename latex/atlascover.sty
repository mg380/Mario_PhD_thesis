%-------------------------------------------------------------------------------
% Print cover page first, then document
%-------------------------------------------------------------------------------
\AtBeginDocument{
  \ifACOV@atlasdoc
    \relax
  \else
    \typeout{atlascover is producing the cover and title pages}
    \ifACOV@twocolumn \onecolumn \fi
    \ifACOV@coverpage
      \ACOV@PrintAtlasCover
      \ACOV@PrintAtlasCoverPageTwo
    \fi
    \setcounter{page}{1}
    \ifACOV@cernpreprint
